<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_hr_attendance" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_attendance.view_employee_form_inherit_hr_attendance"/>
        <field name="arch" type="xml">
            <field name="manual_attendance" position="after">
                <field name="theoretical_hours_start_date"/>
            </field>
            <button name="toggle_active" position="after">
                <button name="%(hr_attendance_theoretical_employee_action)d"
                        context="{'search_default_employee_id': active_id}"
                        class="oe_stat_button"
                        icon="fa-calendar"
                        type="action">
                    <field name="theoretical_hours_difference" widget="statinfo" string="Hours"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
